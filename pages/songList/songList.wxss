/* pages/songList/songList.wxss */
.allitem{
   
    width: 100%;
    height: 100%;
    display: flex;
    flex-flow: wrap row;
    justify-content:space-around;
}
.item{
    position: relative;
    width: 320rpx;
    height: 460rpx;
    
    
}
.item-img{
    width: 300rpx;
    height: 360rpx;
    
}
.bar{
    position: absolute;
    font-size: 32rpx;
      top: 0;
      left: 0;
      color: #fff;
      width: 100%;
      text-align: right;
      padding: 4rpx 10rpx;
      background-color: rgba(0,0,0,.2); 
}
.item-name{
    overflow : hidden;
      font-size: 28rpx;
      height: 1.7rem;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
       font-family: sans-serif;
      text-align:justify; 
      text-justify:inter-ideograph;
}