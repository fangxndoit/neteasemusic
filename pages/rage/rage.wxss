/* pages/rage/rage.wxss */
.swiper{
    width: 100%;
}
.slide-image{
    width: 100%;
    height: 420rpx;
}
.good-music{
    font-size: 20px;
    margin-left: 10px;
    position: absolute;
    margin-top: 10px;
}
.more-music{
    color: #989898;
    position: absolute;
    right: 10px;
    font-size: 14px;
    margin-top: 12px;
}
.allitem{
    margin-left: -5px;
    margin-top: 80rpx;
    margin-bottom: 80rpx;
    width: 100%;
    height: 100%;
    display: flex;
    flex-flow: wrap row;
    justify-content:space-around;
}
.item{
    position: relative;
    width: 220rpx;
    height: 320rpx;
    
    
}
.item-img{
    width: 220rpx;
    height: 220rpx;
    
}
.bar{
    position: absolute;
    font-size: 32rpx;
      top: 0;
      left: 0;
      color: #fff;
      width: 200rpx;
      text-align: right;
      padding: 4rpx 10rpx;
      background-color: rgba(0,0,0,.2); 
}
.item-name{
    
      font-size: 24rpx;
      height: 1.7rem;
      text-overflow: ellipsis;
      display: -webkit-box;
      line-height: 30rpx;
      -webkit-box-orient: vertical;
      font-family: sans-serif;
      text-align:justify; 
      text-justify:inter-ideograph;
      overflow: hidden;
}