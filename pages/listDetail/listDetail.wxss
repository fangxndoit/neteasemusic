.playlist-info {
        position: relative;
        padding: 40px .5rem 0 ;
        height: 10rem;
        background-image: url('https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1497596557028&di=350306680ef598a9fc19f04d5d9e43f7&imgtype=0&src=http%3A%2F%2Fpic2.ooopic.com%2F12%2F44%2F26%2F26bOOOPICff.jpg')
    }
    .info-gallery {
            position: relative;
            float: left;
            width: 6rem;
            overflow: hidden;
            margin-left: 10px;
            
    }
    .img{
        
        width: 240rpx;
        height: 300rpx;
    }
    .headimg{
        width: 76rpx;
        height: 76rpx;
        border-radius: 19px;
    }
    .info{
        margin-top: 20px;
       float: right;
        width: 60%;
        color: #ffffff;
    }
    .name{
        
        font-size: 16px;
        
    }
    .author{
        margin-top: 10px;
        position: relative;
    }
    .author-name{
        position: absolute;
        font-size: 14px;
        height: 45px;
        line-height: 45px;
        margin-left: 5px;
    }
.add-all{
    margin-left: 5px;
    font-size: 16px;
    padding-left: 30px;
    color: #989898;
    margin-top: 10px;
    margin-bottom: 10px;
    border-width: 0 0 1px 0;
    
    border-style: solid;
    border-color: #E6E6E6;
    position: relative;
    height: 70rpx;
    width: 50%;
}
.imgbtn{
    
    margin-right: 10rpx;
    width: 60rpx;
    height: 60rpx;
    position: absolute;
}

.playall{
    left: 130rpx;
    height: 60rpx;
    line-height: 60rpx;
    position: absolute;
}
.list{
    height: 130rpx;
    
}
.num{
    width: 70rpx;
    height: 130rpx;
    line-height: 65px;
    text-align: center;
    float: left;
    margin-left: 10px;
    font-size: 15px;
}
.music-info{
    width: 100%;
    height: 76rpx;
    padding: 15px 15px 10px 130rpx;
    
    font-size: 14px;
    
}
.sing{
    height: 16px;
    width: 100%;
}
.singer{
    font-size: 13px;
    width: 100%;
