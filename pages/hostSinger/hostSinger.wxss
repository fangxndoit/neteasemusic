/* pages/hostSinger/hostSinger.wxss */
.songlist{
    width: 100%;
    height: 60px;
    position: relative;
    border-width: 0 0 1px 0;
    border-style: solid;
    border-color: #E6E6E6;
    margin-top: 20px;
}
.songimgs{
    width: 50px;
    height: 53px;
    border: 1px solid #ffffff;
    float: left;
    margin-left: 20px;
    margin-right: 20px;
}
.nowlisten{
    width: 30px;
    height: 30px;
    border: 1px solid #ffffff;
    position: absolute;
    right: 10px;
    top: 15px;
    
}

.song{
    padding-top: 5px;
    font-size: 18px;
    
    
    
}
.author{
    font-size: 14px;
    color: #989898;
}
.search{
    width: 40px;
    height: 40px;
    float: right;
    position: absolute;
    top: -8px;
    right: 10px;
}
.section{
    margin-left: 20px;
}
.section input{
    width: 90%;
    font-size: 16px;
    border-width: 0 0 1px 0;
    border-style: solid;
    border-color: #E6E6E6;
}
.addsong{
    padding-top: 10px;
    text-align: center;
    color: #E6E6E6;
    font-size: 12px;
}